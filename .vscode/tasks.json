{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "start develop env",
            "type": "shell",
            "command": "docker-compose -f docker/develop-compose.yml run --service-ports --name devenv dev-image bash",
            "problemMatcher": []
        },
        {
            "label": "stop develop env",
            "type": "shell",
            "command": "docker-compose -f docker/develop-compose.yml down",
            "problemMatcher": []
        },
        {
            "label": "cmake generate",
            "type": "shell",
            "command": "docker exec -it devenv cmake -H/home/develop/src -B/home/develop/build -DCMAKE_BUILD_TYPE=Debug",
            "problemMatcher": []
        },
        {
            "label": "build",
            "type": "shell",
            // Make this the default build command.
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "command": "docker exec -it devenv cmake --build /home/develop/build",
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "label": "clean",
            "type": "shell",
            "command": "docker exec -it devenv make clean",
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "label": "make package",
            "type": "shell",
            "command": "docker exec -it devenv make package",
        },
        {
            "label": "start-gdbserver",
            "type": "shell",
            // not using -it so that it can be a preLaunchTask
            "command": "docker exec -d devenv  gdbserver :2000 /home/develop/build/bin/tests",
            "problemMatcher": []
        },
        {
            "label": "build develop image",
            "type": "shell",
            // not using -it so that it can be a preLaunchTask
            "command": "docker build -f Dockerfile.develop -t your-company/your-project/develop .",
            "problemMatcher": []
        },
        {
            // running without debugging
            "label": "run app",
            "type": "shell",
            // not using -it so that it can be a preLaunchTask
            "command": "docker exec -d devenv /home/develop/build/bin/tests",
            "problemMatcher": []
        },
        {
            "label": "stop app",
            "type": "shell",
            // not using -it so that it can be a preLaunchTask
            "command": "docker exec -d devenv  pkill tests",
            "problemMatcher": []
        }
    ]
}